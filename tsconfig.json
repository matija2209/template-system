{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "rootDir": "src",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "declaration": true,
        "stripInternal": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@schnellsite/types": ["node_modules/@schnellsite/types"]
        },
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-simple",
        "examples",
        "src/tests",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}