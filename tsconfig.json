{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "declaration": true,
        "stripInternal": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@schnellsite/types": ["node_modules/@schnellsite/types"]
        },
        "verbatimModuleSyntax": true
    },
    "include": [
        "*.ts",
        "*.tsx",
        "factory/**/*.ts",
        "factory/**/*.tsx",
        "sections/**/*.ts",
        "sections/**/*.tsx",
        "blocks/**/*.ts",
        "blocks/**/*.tsx",
        "types/**/*.ts",
        "components/**/*.ts",
        "components/**/*.tsx",
        "hooks/**/*.ts",
        "utils/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-simple",
        "examples",
        "tests",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}