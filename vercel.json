{
    "version": 2,
    "buildCommand": "npm install -g vite && vite build",
    "outputDirectory": "src/dist-dev",
    "installCommand": "npm cache clean --force && npm install",
    "routes": [
      {
        "src": "^/assets/(.*)",
        "dest": "/assets/$1"
      },
      {
        "src": "^/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "^/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))$",
        "dest": "/$1"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "build": {
      "env": {
        "VITE_ROOT_DIR": ".",
        "NODE_ENV": "production"
      }
    }
  }